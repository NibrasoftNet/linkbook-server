{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true
      },
      {
        "include": "**/*.json",
        "watchAssets": true
      },
      {
        "include": "mail/mail-templates/**/*",
        "watchAssets": true
      }
    ]
  }
}
